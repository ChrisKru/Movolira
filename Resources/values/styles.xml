    xmlns:app="http://schemas.android.com/apk/res-auto">
    
        
    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="ColoredButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?app:attr/textColorB</item>
        <item name="colorControlHighlight">?app:attr/backgroundColorC</item>
        <item name="colorButtonNormal">?app:attr/backgroundColorB</item>
    </style>
    
    
    <style name="AppThemeCore" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?app:attr/backgroundColorB</item>
        <item name="colorPrimaryDark">?app:attr/backgroundColorB</item>
        <item name="colorAccent">?app:attr/backgroundColorC</item>
        <item name="android:textColor">?app:attr/textColorA</item>
        <item name="android:colorBackground">?app:attr/backgroundColorA</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>


